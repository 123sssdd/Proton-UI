{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@proton-ui/core": ["../core/src"],
      "@proton-ui/core/*": ["../core/src/*"],
      "@proton-ui/streaming": ["../streaming/src"],
      "@proton-ui/streaming/*": ["../streaming/src/*"]
    }
  },
  "include": ["docs", "rspress.config.ts"],
  "exclude": ["node_modules", "doc_build"]
}
